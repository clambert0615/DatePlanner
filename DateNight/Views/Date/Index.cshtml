       <input type="text" id="location" name="location" placeholder="location" /><br />
       <label for="keyword">Keyword:</label><br />
       <input type="text" id="keyword" name="keyword" placeholder="keyword" /><br />
       <input type="submit" value="Submit" />
</form>
